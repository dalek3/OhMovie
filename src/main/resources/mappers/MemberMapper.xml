<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohmovie.mapper.MemberMapper">
	
	 <resultMap type="MemberVO" id="memberLoginMap">
	 	<id property="uIdx" column="u_idx"/>
	 	<result property="uIdx" column="u_idx"/>
	 	<result property="uId" column="u_id"/>
	 	<result property="uPw" column="u_pw"/>
	 	<result property="uName" column="u_name"/>
	 	<collection property="authList" resultMap="authMap"></collection>
	 </resultMap>
	 
 	 <resultMap type="LoginDTO" id="memberMap">
	 	<id property="uIdx" column="u_idx"/>
	 	<result property="uIdx" column="u_idx"/>
	 	<result property="uName" column="u_name"/>
	 </resultMap>
	 
	 <resultMap type="com.ohmovie.vo.AuthVO" id="authMap">
	 	<result property="auth" column="auth"/>
	 </resultMap>
	 
	 <select id="login" resultMap="memberLoginMap">
	 	select mem.u_idx, mem.u_id, u_pw, u_name, enabled, regdate, lastdate, auth 
	 	from member mem left outer join member_auth auth on mem.u_idx = auth.u_idx
	 	where mem.u_id = #{uId};
	 </select>
	 
	 <select id="read" resultMap="memberMap">
	 	select u_idx, u_name from member where u_idx = #{uIdx};
	 </select>
	 
	 <select id="selectByEmail" resultType="String">
	 	select u_id from member where u_id = #{uId};
	 </select>
	
	 <insert id="insert">
	 	insert into member (u_id, u_pw, u_name) values (#{uId}, #{uPw}, #{uName});
	 </insert>
	 
	 <insert id="insertAuth">
	 	insert into member_auth (u_idx) SELECT member.u_idx FROM member WHERE member.u_id = #{uId};
	 </insert>
	 
</mapper>